@model FirstWebMVC.Models.Entities.Student

@{
    ViewData["Title"] = "Thêm mới Sinh viên";
}

<div class="container mt-4">
    <h2>Nhập thông tin sinh viên</h2>
    <hr />

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-success">
            @ViewBag.ThongBao
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Mã Sinh Viên:</label>
                    <input asp-for="StudentCode" class="form-control" placeholder="Nhập mã sinh viên..." />
                </div>
                
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Họ và Tên:</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên..." />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Gửi thông tin</button>
                </div>
            </form>
        </div>
    </div>
</div>